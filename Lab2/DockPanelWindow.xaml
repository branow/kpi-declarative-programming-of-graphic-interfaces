<Window x:Class="Lab2.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="570">
    <DockPanel LastChildFill="False">
        <Label DockPanel.Dock="top" HorizontalAlignment="Center">Label</Label>
        <TextBox DockPanel.Dock="left" Width="200">TextBox</TextBox>
        <TextBox DockPanel.Dock="right" Width="200">TextBox</TextBox>
        <Button DockPanel.Dock="bottom" Margin="50">Button</Button>
    </DockPanel>
</Window>
